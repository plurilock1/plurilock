<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_account_type"
        android:id="@+id/textViewAccountType"
        android:background="#f60000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingRight="20dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_transactions"
        android:id="@+id/textViewTransactions"
        android:background="#f68300"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center_horizontal"
        android:paddingRight="20dp"
        android:textColor="#ffffff" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewAccountTransactions"
        android:layout_gravity="right"
        android:theme="@style/Theme.AppCompat.Light"
        android:background="#ffffff" />
</LinearLayout>